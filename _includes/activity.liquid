---
layout: base.liquid
---
<article class="activity-detail">
  {% if thumbnail %}
    <img src="{{ thumbnail }}/public" alt="Thumbnail for {{ title }}" class="activity-thumb">
  {% endif %}
  <h1 class="activity-title">{{ title }}</h1>
  <div class="activity-meta">
    <span>
      <strong>Date:</strong>
      {{ startDate | formatDateTime }}
      {% if endDate and endDate != "" %}
        &ndash; {{ endDate | formatDateTime }}
      {% endif %}
    </span>
    {% if location %}
      <span><strong>Location:</strong> {{ location }}</span>
    {% endif %}
    {% if tags %}
      <span class="activity-tags">
        {% for tag in tags %}
          <span class="activity-tag">{{ tag }}</span>
        {% endfor %}
      </span>
    {% endif %}
  </div>

   {% if people or external_collaborators %}
     <li class="people-link"><strong>Researcher(s):</strong> 
    {% if people %}
    {% for person_name in people %}
      {% assign person = collections.people | where: "data.person_name", person_name | first %}
      {% if person %}
        <a href="{{ person.url }}">{{ person_name }}</a>
      {% else %}
        {{ person_name }},
      {% endif %}
      {% unless forloop.last %}, {% endunless %}
    {% endfor %}
  {% endif %}

  
    
    {% if external_collaborators %}
  
    {% for collaborator in external_collaborators %}
      {% if collaborator.url %}
       , <a href="{{ collaborator.url | prepend: 'https://' | replace_first: 'https://https://', 'https://' }}" target="_blank" rel="noopener noreferrer">
          {{ collaborator.name }}
        </a>
      {% else %}
        , {{ collaborator.name }}
      {% endif %}
      {% unless forloop.last %}, {% endunless %}
    {% endfor %}
  </li>
{% endif %}

  </li>
{% endif %}

  <div class="activity-body">
    {{ content | raw }}
  </div>
</article> 