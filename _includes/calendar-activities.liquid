<h1 class="page-title">Activities</h1>

<div class="activities-calendar">
  {% for group in collections.calendar_events %}
    <h2>{{ group.month | append: '-01' | monthYear }}</h2>

    <ul>
      {% for event in group.events %}
        <a href="{{ event.url }}" class="event-card">
          {% if event.data.thumbnail %}
            <img src="{{ event.data.thumbnail }}" width="" height="" alt="{{ event.data.title }}" class="event-thumb">
          {% endif %}
          <div class="event-info">
            <h3>{{ event.data.title }}</h3>
            <p class="event-time">
              {{ event.data.startDate | formatDateTime }}
              </p>
          </div>
        </a>
      {% endfor %}
    </ul>


    {{ event.tag }}

    {% if event.tags %}
      <span class="activity-tags">
        {% for tag in tags %}
          <span class="activity-tag">{{ event.tag }}</span>
        {% endfor %}
      </span>
    {% endif %}


  {% endfor %}
</div>


