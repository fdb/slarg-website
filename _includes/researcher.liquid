---
layout: base
---
    <h2 class="big-title">{{ researcher_name }}</h2>
    <div class="researcher-page">
        <div class="researcher-image">
            <img src="{{ image_researcher }}-/format/auto/scale_crop/600x600/smart/" width="" height="" alt="{{ name }}">
        </div>
        <div class="researcher-text">
            <p>
            {{ bio | raw }}
            </p>
            <p>Contact:<br>
            {{ email }}
            </p>
            <p>
            Links<br>
            {% for link in social_links %}
                <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer">{{ link.name }}</a>
            {% endfor %}
            </p>
        </div>
    </div>
