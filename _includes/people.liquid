---
layout: base
---
<link rel="stylesheet" href="/static/css/people.css">

<div class="person-container">
  <div class="person-header">
    <div class="person-image">
      {% if headshot %}
        <img
          src="{{ headshot }}-/scale_crop/800x1000/smart/"
          alt="{{ person_name }}"
          width="800"
          height="100">
      {% else %}
        <div class="placeholder-image"></div>
      {% endif %}
    </div>
    <div class="person-info">
      <h1 class="person-name">{{ person_name }}</h1>
      {% if role %}
        <p class="person-role">{{ role | join: ", " }}</p>
      {% endif %}
       {% if email %}
         <p class="person-email">{{ email }}</p>
       {% endif %}
      {% if research_interests %}
        <div class="person-interests">
          {% for interest in research_interests %}
            <span class="interest-tag">{{ interest }}</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
  
  <br>
      
  <div class="person-bio">
    {{ bio | markdownify }}
  </div>

  {% assign social_links_trimmed = social_links | strip %}
  {% if social_links_trimmed != 'false' and social_links_trimmed.size > 0 %}
    <div class="person-social-links">
      <h3>Links & Social</h3>
      {{ social_links | markdownify }}
    </div>
  {% endif %}

    {% if projects and projects.size > 0 and collections.projects %}
      <div class="person-projects">
      <h2>Projects</h2>
      <ul>
        {% for projectEntry in collections.projects %}
          {% if projects contains projectEntry.data.title %}
            <li>
              <a href="{{ projectEntry.url }}">{{ projectEntry.data.title }}</a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      </div>
    {% endif %}
 


</div>