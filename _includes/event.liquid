---
layout: base
---
<div class="event-meta">
    <h2 class="event-title">{{ title }}</h2>
    <h3 class="event-byline">{{ byline }}</h3>
    <div class="event-details">
        <span class="event-type">{{ type }}</span> |
        <span class="event-author">{{ author}}</span> |
        <span class="event-date">{{ date | formatDate }}{% if time %} | {{ time | escape}}{% endif %}</span> |
        <span class="event-location">{{ location }}</span>
    </div>
</div>
<div class="event-layout">
    <div class="event-image">
        <img src="{{ main_image }}-/scale_crop/300x300/" alt="{{ title }}">
    </div>
    <div class="event-text">
        {{ content | raw }}
    </div>
</div>
<div class="event-images">
    {%- for image in images -%}
    <img class="image" src="{{ image }}-/scale_crop/300x300/" alt="" />
    {%- endfor -%}
</div>